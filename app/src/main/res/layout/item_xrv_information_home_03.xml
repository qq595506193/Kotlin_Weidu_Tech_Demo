<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:maxLines="3"
        android:text="维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技维度科技"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_content"
        app:layout_constraintRight_toRightOf="@id/tv_content"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:src="@mipmap/gg"
        app:layout_constraintLeft_toLeftOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="@id/iv_icon" />

</android.support.constraint.ConstraintLayout>